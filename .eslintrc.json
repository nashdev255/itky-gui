{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-console": ["error"],
    "eqeqeq": ["error"],
    "semi": ["warn", "always"],
    "indent": ["warn", 2],
    "quotes": ["warn", "single"]
  }
}
